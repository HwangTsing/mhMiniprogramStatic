.fl {
    float: left;
}

.fr {
    float: right;
}

/* 清除浮动 */
.cls {
}

.cls::before, .cls::after {
    display: block;
    content: " ";
    clear: both;
    height: 0;
    font-size: 0;
    line-height: 0;
    overflow: hidden;
}
