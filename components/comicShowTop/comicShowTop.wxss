
/* 公共S */
.fl {
    float: left;
}

.fr {
    float: right;
}

/* 清除浮动 */
.cls {
}

.cls::before, .cls::after {
    display: block;
    content: " ";
    clear: both;
    height: 0;
    font-size: 0;
    line-height: 0;
    overflow: hidden;
}
/* 公共E */

.comicShowTop{
  width: 100%;
}

/*  第一种展示方式S  */
.comicShowTop .details_view {
  width: 100%;
  height: 420rpx;
}
.comicShowTop .details_img {
  width: 100%;
  height: 420rpx;
  background: rgba(0, 0, 0, 0.65);
}
.comicShowTop .details_img .detail_src {
  width: 192rpx;
  height: 274rpx;
  margin-top: 68rpx;
  margin-left: 30rpx;
  display: inline-block;
  float: left;
}
.comicShowTop .info_content {
  float: left;
  padding: 68rpx 40rpx 78rpx 40rpx;
  width: 448rpx;
}
.comicShowTop .info_content .detail_title {
  padding:36rpx 0 32rpx 0;
  color: #fff;
  font-size: 48rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.comicShowTop .info_content .detail_label {
  width: 100%;
}
.comicShowTop .detail_label .span {
  display: inline-block;
  padding: 6rpx 12rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 20rpx;
  margin-right: 36rpx;
  margin-bottom: 20rpx;
}
/*  第一种展示方式 E  */

/*  第二种展示方式 S  */
.details_view_2{
  position: relative;
  width: 100%;
  height: 420rpx;
}

/*  信息展示  */
.details_comic{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 146rpx;
    z-index: 10;
}
.details_comic .details_comic_top{
    display: flex;
    padding: 16rpx 16rpx 16rpx 30rpx;
}
.details_comic .comic_top_text{
    height: 24px;
}
.details_comic .comic_top_text text{
    line-height: 48rpx;
    font-size: 40rpx;
    color: #fff;
}
 /* 付费框 */
.details_comic .comic_top_icon{
    margin-left:16rpx;
    margin-top: 14rpx;
    width: 60rpx;
    height: 32rpx;
    line-height: 32rpx;
    background: #FF4C6A;
    border-radius:16rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
}
/* 标签 */
.details_view_2 .detail_comic_label{
  padding:0 30rpx;
}
.details_view_2 .comic_label{
    margin-right: 8rpx;
    padding: 0 12rpx;
    font-size: 24rpx;
    line-height: 32rpx;
    border: 1px solid #FFFFFF;
    border-radius:16rpx;
    text-align: center;
    color:#fff;
}

