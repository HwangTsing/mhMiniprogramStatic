
/* 公共S */
.fl {
    float: left;
}

.fr {
    float: right;
}

/* 清除浮动 */
.cls {
}

.cls::before, .cls::after {
    display: block;
    content: " ";
    clear: both;
    height: 0;
    font-size: 0;
    line-height: 0;
    overflow: hidden;
}
/* 公共E */

.comicShowTop{
    position: relative;
    height: 420rpx;
    display: block;
}
.comicShowTop .details_view,.comicShowTop .details_view_2{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}
/*  第一种展示方式S  */
.comicShowTop .details_view {
  width: 100%;
  height: 420rpx;
}
.comicShowTop .details_img {
  width: 100%;
  height: 420rpx;
  background: rgba(0, 0, 0, 0.8);
}
.comicShowTop .details_img .detail_src {
  position: relative;
  width: 192rpx;
  height: 274rpx;
  margin-top: 68rpx;
  margin-left: 30rpx;
  display: inline-block;
  float: left;
}
.comicShowTop .details_img .detail_src .detail_src_bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.comicShowTop .info_content {
  float: left;
  padding: 68rpx 40rpx 78rpx 40rpx;
  width: 448rpx;
}
.comicShowTop .info_content .detail_title_box{
    padding:36rpx 0 32rpx 0;
    display:flex;
    align-items: center;
}
.comicShowTop .info_content .detail_title {
  max-width: 98%;
  color: #fff;
  font-size: 48rpx;
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.comicShowTop .info_content .detail_title_icon{
    width: 160rpx;
    height: 44rpx;
}
.comicShowTop .info_content .detail_label {
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
}
.comicShowTop .detail_label .span {
    /*display: flex;*/
    /*align-items:center;!*垂直居中*!*/
    /*justify-content: center;!*水平居中*!*/
    /*float: left;*/
    padding: 6rpx 12rpx;
    min-width: 48rpx;
    /*height: 32rpx;*/
    line-height: 11px;
    font-size: 12px;
    text-align:center;
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.6);



    border-radius: 18rpx;
    margin-right: 8rpx;
    margin-bottom: 20rpx;
}
.comicShowTop .detail_label .span text{
    flex: 1;
}
/*  第一种展示方式 E  */

/*  第二种展示方式 S  */
.details_view_2{
  position: relative;
  width: 100%;
  height: 420rpx;
}

/*  信息展示  */
.details_comic{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 146rpx;
    z-index: 10;
}
.details_comic .details_comic_top{
    display: flex;
    align-items:center;
    padding: 16rpx 16rpx 10rpx 30rpx;
}
.details_comic .comic_top_text{
    display: flex;
    align-items:center;
    box-sizing: border-box;
    width: 100%;
    align-items: center;
    color:#fff
}
.details_comic .comic_top_text text{
    max-width: 98%;
    flex: 1;
    height: 52rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    line-height: 48rpx;
    font-size: 40rpx;
    color: #fff;
}
 /* 付费框 */
.details_comic .comic_top_icon{
    flex: 1;
    align-items: center;
    margin-left:16rpx;
    margin-top:8rpx;
    max-width: 60rpx;
    min-width:90rpx;
    width: 60rpx;
    line-height: 32rpx;
    background: #FF4C6A;
    border-radius:16rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
}
.details_comic .details_comic_top_icon{
    width: 160rpx;
    height: 44rpx;
}
/* 标签 */
.details_view_2 .detail_comic_label{
    display: flex;
    align-items:center;
    padding:0 30rpx;
}
.details_view_2 .details_comic{
    background-image: linear-gradient(-180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.6) 100%);
}
.details_view_2 .comic_label{
    /*display:flex;
    align-items:center;!*垂直居中*!
    justify-content: center;!*水平居中*!*/
    display:flex;
    min-width: 24px;
    margin-right: 4px;
    padding:3px 6px;
    font-size: 12px;
    line-height:11px;
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius:9px;
    text-align: center;
    color:#fff;
}
.details_view_2 .comic_label text{
    flex: 1;
}
