/* components/searchList/searchList.wxss */
.list_data {
  width: 100%;
  height: 100%;
  margin-top: 31rpx;
}
.img_view {
  width: 180rpx;
  height: 231rpx;
  flex: 1;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  float: left;
}
.img_view image {
  width: 180rpx;
  height: 231rpx;

}
.book_data {
  /*display: inline-block;*/
  flex: 1;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  height: 231rpx;
  margin-top:40rpx;
  /*float: left;*/
}
.book_data .book_name, .book_data .explain {
    margin-left: 27rpx;
    display: inline-block;
}
.book_data .book_name {
  width:400rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom:14rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;

}
.book_data .author {
  margin-bottom:16rpx;
  display: block;
  margin-left:200rpx;
}
.book_data .explain {
    display:inline-block ;
}
.book_data .author, .book_data .explain {
    color: #999;
    font-size: 26rpx;
}
