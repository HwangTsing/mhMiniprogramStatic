<!--components/searchList/searchList.wxml-->

<view class="list_data" catchtap="listTap" data-comic_id="{{idx}}">
    <view class="img_view" style="position: relative;top: 0;left: 0;">
        <image mode="aspectFit" style="background-color:#eaeaea;">
            <image mode="aspectFit" lazy-load="true" src="{{src}}"
                   style="position: absolute;left: 0;top: 0;"></image>
        </image>
    </view>
    <view class="book_data">
        <view class="book_name">{{name}}</view>
        <view class="author">作者：{{artists}}</view>
        <view class="cate_view">
            <block wx:for="{{cates}}" wx:key="index">
                <text class="explain" wx:if="{{cates.length-1===index}}">{{item.cate_name}}</text>
                <text class="explain" decode="{{true}}" space="{{true}}" wx:else>{{item.cate_name}}&nbsp;\&nbsp;</text>
            </block>
        </view>
    </view>
</view>
