<!--components/searchList/searchList.wxml-->

<navigator class="list_data" url="../details/details?comic_id={{idx}}">
    <view class="img_view">
        <image mode="aspectFit" lazy-load="true"
               style="background: url('../../images/cover.png')no-repeat;background-size: 100% 100%;position: relative;top: 0;left: 0;;">
            <image mode="aspectFit" lazy-load="true" src="{{src}}"
                   style="position: absolute;left: 0;top: 0;"></image>
        </image>
    </view>
    <view class="book_data">
        <p class="book_name">{{name}}</p>
        <p class="author">作者：{{artists}}</p>
        <block wx:for="{{cates}}" wx:key="index">
            <p class="explain" wx:if="{{cates.length-1===index}}">{{item.cate_name}}</p>
            <p class="explain" wx:else>{{item.cate_name}}\</p>
        </block>

    </view>
</navigator>
