/*  评论组件S  */
@charset "UTF-8";

.comment_list_box {
    padding-bottom: 28rpx;
    padding-top: 20rpx;
    display: flex;
    width: 100%;
    height: auto;
    /*border-bottom: 1px solid #E6E6E6;*/
}
.comment_list_box_border{
    border-bottom:none;
}
/* 主体框架 */
.comment_list_box .comment_left{
    width: 88rpx;
}
.comment_list_box .comment_right{
    flex: 1;
}

/* letf 头像 */
.comment_list_box .comment_left .user_avatar_bg,.comment_list_box .comment_left .user_avatar{
    width:72rpx ;
    height: 72rpx;
    border-radius: 50%;
    overflow: hidden;
}
.comment_list_box .comment_left .user_avatar_bg{
    position: relative;
    margin-right: 16rpx;
}
.comment_list_box .comment_left .user_avatar{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}

/* right 用户名|内容|时间 */
.comment_right .comment_user_nickname {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 26rpx;
    color: #999;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.comment_right .comment_content{
    padding-top: 6rpx;
    padding-bottom: 12rpx;
    line-height: 44rpx;
    font-size:28rpx;
    color:#333;
}

/* 二级评论 */
.comment_right .reply_content{
    margin-bottom: 12rpx;
    padding: 16rpx;
    background: #F6F6F6;
}
.comment_right .reply_content_item{
    line-height: 36rpx;
    font-size: 24rpx;
    color:  #2A2A2A;
}
.reply_user_nickname,.reply_content_text{
    display: inline;
}
.reply_user_nickname{
    color: #33BBFF;
}
.reply_total{
    line-height: 36rpx;
    font-size: 24rpx;
    color: #33BBFF;
}

/* 底部 */
.comment_right .comment_bottom{
    display: flex;
    width: 100%;
    height:32rpx;
}
.comment_right .comment_time{
    align-items: center;
    flex: 2;
    width: 200rpx;
    max-width: 200rpx;
    line-height: 32rpx;
    font-size: 22rpx;
    color: #999;
}
.comment_right .comment_bottom .comment_reply_length{
    align-items: center;
    flex: 2;
    width: 200rpx;
    max-width: 200rpx;
    line-height: 32rpx;
    font-size: 22rpx;
    color: #999;
}
