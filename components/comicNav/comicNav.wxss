  /* padding: 32rpx 0; */
}

.comic-nav-button .button{
  position: relative;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
}
.navigator-hover{
  background-color: #f5f5f5;
}
.navigator-hover .button, .disabled .button{
  color: #ccc;
}
.next-button::before{
  content: '';
  position: absolute;
  left: 0;
  top: 26rpx;
  width: 1px;
  height: 44rpx;
  background-color: #e6e6e6;
}
.prev-button::before, .next-button::after{
  content: ' ';
  display: inline-block;
  vertical-align: middle;
  width: 14rpx;
  height: 14rpx;
  margin: 0 4rpx;
  border: 4rpx solid #ccc;
  border-radius: 2rpx;
  transform: rotateZ(45deg);
}
.prev-button::before{
  border-color: transparent transparent #ccc #ccc;
}
.next-button::after{
  border-color: #ccc #ccc transparent transparent ;
}