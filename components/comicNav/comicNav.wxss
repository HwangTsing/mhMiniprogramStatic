.comic-nav-button{
  padding: 32rpx 0;
}

.comic-nav-button .button{
  position: relative;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}
.navigator-hover{
  background-color: #f5f5f5;
}
.navigator-hover .button, .disabled .button{
  color: #ccc;
}
.next-button{
  border-left: 1rpx solid #E6E6E6;
}
.prev-button::before, .next-button::after{
  content: ' ';
  display: inline-block;
  position: relative;
  top: 3rpx;
  width: 16rpx;
  height: 16rpx;
  margin: 0 4rpx;
  border: 6rpx solid #ccc;
  border-radius: 2rpx;
  transform: rotateZ(45deg);
}
.prev-button::before{
  border-color: transparent transparent #ccc #ccc;
}
.next-button::after{
  border-color: #ccc #ccc transparent transparent ;
}