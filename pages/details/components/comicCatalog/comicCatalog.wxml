<!-- 目录组件(章节)包含横版|九宫格 S -->
<view class="comic_catalog_box">

    <view
        class="comic_catalog_one cls"
        wx:if="{{directoryDisplay==1}}"
    >
        <view
            wx:for="{{chapterList}}"
            style="{{(index+1)%3===0?'margin-right:0;':''}}"
            wx:key="index"
            class="comic_catalog_one_item fl {{history && history.chapter_id===item.chapter_id?' comic_catalog_one_active':''}}"
            id="{{item.chapter_id}}"
            data-chapter_id="{{item.chapter_id}}"
            data-chapter_name="{{item.chapter_name?item.chapter_name:''}}"
            data-comic_id="{{comic_id}}"
            bindtap="ClickCatalog"
            data-item="{{item}}"
        >
          
            <text >{{item.chapter_name?item.chapter_name:''}}</text>

             <image  id="pay_lockImg"  wx-if="{{item.isLocked }}"   src="../../../../images/details/passWord_icon1.png" ></image>
        </view>
    </view>

    <!-- 横版目录 S -->
    <view
        wx:if="{{directoryDisplay==2}}"
        wx:for="{{chapterList}}"
        wx:key="index"
        class="comic_catalog_two {{history && history.chapter_id===item.chapter_id?' active':''}}"
        id="{{item.chapter_id}}"
        data-chapter_id="{{item.chapter_id}}"
        data-chapter_name="{{item.chapter_name?item.chapter_name:''}}"
        data-comic_id="{{comic_id}}"
        data-item="{{item}}"
        bindtap="ClickCatalog"
    >
        <!-- 章节名称 S -->
        <view class="comic_catalog_chapter_name">
            {{item.chapter_name?item.chapter_name:''}}
        </view>
        <!-- 章节名称 E -->

         <!-- 付费章节锁 S -->
              <view class="pay_lock"  wx-if="{{item.isLocked  }}"  >
                   <image
                    src="../../../../images/details/passWord_icon2.png"
                   ></image>
              </view>
             
         <!-- 付费章节锁 E -->




        <!-- 右侧箭头 S -->
        <view class="comic_catalog_chapter_btn">
            <image
                mode="aspectFill"
                style="background: url(../../../../images/details/catalog_chapter_btn.png) center center / cover;"
                src="../../../../images/details/catalog_chapter_btn.png"
            ></image>
        </view>
        <!-- 右侧箭头 E -->
    </view>
    <!-- 横版目录 E -->



</view>
<!-- 目录组件(章节)包含横版|九宫格 E -->


   <!-- 弹出付费框 S  -->
         <popUp  wx:if="{{floorstatus}}"  bind:myevent="onMyEvent"></popUp>
