@charset "UTF-8";

.comic_catalog_box{
    width:100%;
    height: auto;
}
/* 横版样式 */
.comic_catalog_two{
    margin: 0 30rpx;
    padding: 48rpx 0;
    border-bottom:2rpx solid #E6E6E6;
    display: flex;
}
.comic_catalog_chapter_name{
    align-items: center;
    min-width: 70%;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 35rpx;
    color: #333333;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.comic_catalog_chapter_btn{
    position: relative;
    align-items: center;
    width: 30%;
}
.comic_catalog_chapter_btn image{
    position: absolute;
    right: 0;
    top: 0;
    width: 48rpx;
    height: 48rpx;
}


/* 九宫格样式 */
.comic_catalog_one{
    padding: 28rpx 15rpx;
    height: auto;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}
.comic_catalog_one_item{
    padding:0 10rpx;
    flex: 1;
    align-content: center;
    justify-items: center;
    align-items: center;
    justify-items: center;
    margin-bottom: 28rpx;
    margin-right: 25rpx;
    min-width:200rpx;
    max-width:200rpx;
    width: 200rpx;
    height: 76rpx;
    line-height: 76rpx;
    border: 2rpx solid #E9EAEA;
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
    color: #333333;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}

/* 九宫格选中样式 */
.comic_catalog_one .active{
    padding:0 10rpx;
    min-width:204rpx;
    max-width:204rpx;
    width: 204rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: #FF4C6A;
    color: #fff;
    border: none;
}

.active .comic_catalog_chapter_name{
    color: #FF4C6A;
}


