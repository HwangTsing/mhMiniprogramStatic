    <!--搜索框聚焦时显示-->
    <view class="{{isOpacity? 'search_view_show':'search_view'}}">
        <view class="search_img">
            <image class="search_images" src="../../images/search_gray.png"></image>
            <input class="search_input" type="text" cursor-spacing="3px" placeholder="搜索作品或作者名称" placeholder-style="color:#fff;"
                   bindfocus="focusInputEvent" bindinput="bindInputChange"/>
            <block wx:if="{{boyid}}">
                <image class="boy_img" src="../../images/boy.png"></image>
            </block>
            <block wx:elif="{{girlid}}">
                <image class="girl_img" src="../../images/girl.png"></image>
            </block>

        </view>
    </view>
