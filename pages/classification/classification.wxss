/* pages/classification/classification.wxss */
.container_classific {
    width :100%;
}
.container_classific .class_label_view {
    width:100%;
    height:144rpx;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: row;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: row;
    -ms-flex-direction: row;
    box-sizing: border-box;
    text-align: center;
    flex-wrap:wrap;
    align-content: center;
    padding-left: 20rpx;
    border-bottom:1rpx solid #E6E6E6;
}
.class_label_view .label_title {
    font-size:28rpx;
    padding:12rpx 14rpx;
    color: #999999;
    font-family:PingFangSC-Regular;
}
.label_title_active {
    font-size:28rpx;
    padding:12rpx 14rpx;
    color: #333333;
    font-family:PingFangSC-Regular;
}
.active_border {
    width:42%;
    margin:2rpx auto;
    border:2rpx solid #FF4C6A;
    background:#FF4C6A;
    border-radius:10rpx;
    -webkit-border-radius:10rpx;
    -moz-border-radius:10rpx;
    -mz-border-radius:10rpx;
    overflow:hidden;
}
.checked_border{
    /*width: 50%;
    height: 2rpx;
    margin: 12rpx auto;
    border: 2rpx solid #fff;
    border-radius:10rpx;*/
    overflow: hidden;
    background: #fff;
}
.container_classific .small_label_view {
    width:100%;
    height:64rpx;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: row;
    -webkit-box-orient: vertical;
    -webkit-flex-direction: row;
    -ms-flex-direction: row;
    box-sizing: border-box;
    justify-content: flex-start;
    padding-left: 20rpx;
}
.small_label_view .small_title {
    font-size:28rpx;
    padding:7rpx 14rpx;
    color: #999999;
    font-family:PingFangSC-Regular;
    margin-top:8rpx;
}
.small_title_active {
    font-size:28rpx;
    padding:7rpx 14rpx;
    color:rgba(255,77,106,1);
    background:rgba(255,77,106,0.1);
    font-family:PingFangSC-Regular;
    border-radius:32rpx;
    margin-top:8rpx;
}

